#!/usr/bin/env perl
use strict;
use warnings;
use lib 'lib';
use IM::Engine;
use Bot::Games;

IM::Engine->new(
    interface => {
        protocol => 'REPL',
    },
    plugins => [
        Commands => {
            namespace        => 'Bot::Games::Game',
            exclude_commands => qr/Bot::Games::Game::Role/,
            prefix           => '@',
            alias            => {
                sg => 'superghost',
            },
        },
    ],
)->run;
